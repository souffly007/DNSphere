<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_bg"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Logo/IcÃ´ne -->
        <ImageView
            android:id="@+id/ivShield"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/ic_shield"
            app:tint="@color/green"
            android:layout_marginTop="16dp"/>

        <!-- Titre -->
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="DNSphere"
            android:textSize="28sp"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:layout_marginTop="12dp"/>

        <!-- Statut -->
        <TextView
            android:id="@+id/tvStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Protection dÃ©sactivÃ©e"
            android:textSize="14sp"
            android:textColor="@color/gray"
            android:layout_marginTop="4dp"/>

        <!-- Bouton ON/OFF Principal -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnToggle"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_gravity="center_horizontal"
            android:text="OFF"
            android:textSize="32sp"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            app:cornerRadius="80dp"
            app:backgroundTint="@color/red"
            android:layout_marginTop="24dp"/>

        <!-- Statistiques -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardStats"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/card_bg"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            android:layout_marginTop="24dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“Š Statistiques (tap pour voir les logs)"
                    android:textColor="@color/gray"
                    android:textSize="12sp"
                    android:layout_marginBottom="8dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!-- Pubs bloquÃ©es -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/tvAdsBlocked"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textSize="28sp"
                            android:textColor="@color/green"
                            android:textStyle="bold"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Pubs bloquÃ©es"
                            android:textSize="12sp"
                            android:textColor="@color/gray"/>
                    </LinearLayout>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/gray"
                        android:alpha="0.3"/>

                    <!-- Trackers bloquÃ©s -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/tvTrackersBlocked"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textSize="28sp"
                            android:textColor="@color/orange"
                            android:textStyle="bold"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Trackers bloquÃ©s"
                            android:textSize="12sp"
                            android:textColor="@color/gray"/>
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Options de protection -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/card_bg"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            android:layout_marginTop="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ›¡ï¸ Options de protection"
                    android:textColor="@color/gray"
                    android:textSize="12sp"
                    android:layout_marginBottom="8dp"/>

                <!-- Anti-Pub -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingVertical="12dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="ðŸš« Bloquer les publicitÃ©s"
                        android:textColor="@android:color/white"
                        android:textSize="16sp"/>

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/switchAds"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"/>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/gray"
                    android:alpha="0.2"/>

                <!-- Anti-Tracking -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingVertical="12dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="ðŸ”’ Bloquer les trackers"
                        android:textColor="@android:color/white"
                        android:textSize="16sp"/>

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/switchTrackers"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"/>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/gray"
                    android:alpha="0.2"/>

                <!-- Malware -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingVertical="12dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="â˜ ï¸ Protection malware"
                        android:textColor="@android:color/white"
                        android:textSize="16sp"/>

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/switchMalware"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"/>
                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Actions rapides -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/card_bg"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            android:layout_marginTop="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="âš¡ Actions rapides"
                    android:textColor="@color/gray"
                    android:textSize="12sp"
                    android:layout_marginBottom="8dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!-- Bouton Logs -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnLogs"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="ðŸ“‹ Logs"
                        android:textSize="12sp"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        app:strokeColor="@color/green"
                        android:textColor="@color/green"
                        android:layout_marginEnd="4dp"/>

                    <!-- Bouton Whitelist -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnWhitelist"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="âœ… Whitelist"
                        android:textSize="12sp"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        app:strokeColor="@color/green"
                        android:textColor="@color/green"
                        android:layout_marginStart="4dp"/>

                </LinearLayout>

                <!-- Bouton ParamÃ¨tres -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnSettings"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="âš™ï¸ ParamÃ¨tres"
                    android:textSize="12sp"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    app:strokeColor="@color/gray"
                    android:textColor="@color/gray"
                    android:layout_marginTop="8dp"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Info version -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="DNSphere v1.0 - Protection DNS locale"
            android:textSize="11sp"
            android:textColor="@color/gray"
            android:alpha="0.6"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="16dp"/>

    </LinearLayout>
</ScrollView>